@import 'module/colors'

for $key1 in $ax-colors
    $mapVal1 = $ax-colors[$key1]
    if typeof($mapVal1) == 'object' 
        for $key2 in $mapVal1
            $mapVal2 = $mapVal1[$key2]
            .ax-color-{$key1}-{$key2} 
                color: $mapVal2 !important;

            .ax-bg-color-{$key1}-{$key2} 
                background-color: $mapVal2 !important;

            if $key2 == '500' 
                .ax-color-{$key1} 
                    color: $mapVal2 !important;

                .ax-bg-color-{$key1} 
                    background-color: $mapVal2 !important;

    else
        .ax-color-{$key1}
            color: $mapVal1 !important;

        .ax-bg-color-{$key1} 
            background-color: $mapVal1 !important;