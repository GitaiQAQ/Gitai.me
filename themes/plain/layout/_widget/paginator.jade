//- paginator
mixin paginator(layout)
  if layout == 'home' || layout == 'archive'
    - var prev = page.prev_link
    - var next = page.next_link
  else if layout == 'post'
    - var prev = page.prev ? page.prev.path : false;
    - var next = page.next ? page.next.path : false;
    
  .paginator
    if page.prev || prev
      a.prev(href=url_for(prev))
        i.iconfont.icon-chevron-left
        span 
          != __('prev')
    if page.next || next
      a.next(href=url_for(next))
        span
          != __('next')
        i.iconfont.icon-chevron-right
