//- social
if (config.social || theme.social) && is_home()
  div.social
    for link, name in (config.social || theme.social)
      a.iconfont(class="icon-#{name}" href=url_for(link)) 

//- Copyright
.copyright
  - var currentDate = new Date()
  - var year = currentDate.getFullYear()
  - var since = config.since || theme.since
  if since
    - year = year == since ? year : since + '-' + year
    - copyright = '&copy;' + year
    
  p
    != copyright
    span.heart
      i.iconfont.icon-heart
    span.author
      != config.author || theme.author
  p.theme
    != "Theme by " 
    
    a(href="https://github.com/GitaiQAQ/hexo-theme-plain") 
      != "Plain"
    
//- Back to top
label#back2top
  i.iconfont.icon-chevron-up
