//- Home
mixin home()
  ul.home
    - page.posts.each(function (item) {
      li.post-item
        article.post
          h1.post-title
            a.post-link(href=url_for(item.path))
              != item.title
          span.post-info
            != full_date(item.date, 'll')
            - if (item.from)
              a.post-from(href= item.from) original source
          div.post-content.post-content-preview
            != item.excerpt
          a.read-more(href=url_for(item.path))
            != __('more') 
    - })

//- Post
mixin post() 
  article.post
    h1.post-title
      != page.title
    span.post-info
      != full_date(page.date, 'll')
    if config.sidebar && toc(page.content)
      hr
      .post-sidebar#sidebar
        != toc(page.content, {list_number: false})
      hr
    .post-content
      != page.content
  
//- Archive
mixin archive()
  article.archive
    - var year = 0;
    - var change = false;
    - page.posts.each(function (item) {
      - var itemYear = date(item.date, 'YYYY') - 0;
      - change = year !== itemYear;
      - year = change ? itemYear : year;
      
      if change
        h2.year
          != year
      .post-item
        .post-info
          != full_date(item.date, 'MMM D')
        a.post-link(href=url_for(item.path))
          != item.title
    - })

//- Tag
mixin tag()
  .archive
    h2.tag
      = page.tag
    each item in page.posts.toArray()
      .post-item
        .post-info.tag
          != full_date(item.date, 'll')
        a.post-link(href=url_for(item.path))
          != item.title    

//- About
mixin about()
  .post
    article.post-block
      .post-content
        != page.content
